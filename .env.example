# Starlink API Credentials
STARLINK_CLIENT_ID=your_client_id_here
STARLINK_CLIENT_SECRET=your_client_secret_here

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=your_email@gmail.com

# Flask Web Application
FLASK_SECRET_KEY=generate_a_random_secret_key_here
FLASK_ENV=production
FLASK_DEBUG=False

# Application Ports
PORT=5000
CLIENT_PORTAL_PORT=5001

# Database Configuration
STARLINK_DB_PATH=/app/data/starlink_manager.db

# Default Admin User (only used on first run if no users exist)
DEFAULT_ADMIN_PASSWORD=change_this_secure_password
ADMIN_EMAIL=admin@yourdomain.com

# Chatwoot Configuration (optional)
CHATWOOT_WEBSITE_TOKEN=your_chatwoot_website_token_here
CHATWOOT_BASE_URL=https://app.chatwoot.com

# Application Settings
COMPANY_NAME=Zuba Broadband
ADMIN_SUBDOMAIN=zubadash.dadishimwe.com
CLIENT_SUBDOMAIN=zubaclient.dadishimwe.com

# Logging
LOG_LEVEL=INFO
